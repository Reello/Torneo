@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-light manga">Bentornato @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-light manga">Disconnessione</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light manga" asp-area="Identity" asp-page="/Account/Register">Registrazione</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light manga" asp-area="Identity" asp-page="/Account/Login">Accesso</a>
    </li>
}
</ul>
